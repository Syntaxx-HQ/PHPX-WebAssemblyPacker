{
    "name": "syntaxx/webassembly-packer",
    "description": "WebAssembly file packager with LZ4 compression support",
    "license": "MIT",
    "type": "project",
    "bin": [
        "bin/file-packager"
    ],
    "require": {
        "php": ">=8.1",
        "syntaxx/lz4": "0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/process": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "Syntaxx\\WebAssemblyPacker\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:e2e": "phpunit --testsuite 'E2E Tests'"
    },
    "minimum-stability": "dev"
}
